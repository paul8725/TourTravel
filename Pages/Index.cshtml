@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>



<div class="container">
    <div class="row">

        @foreach (var item in Model.Package)
        {
            <div class="col-md-4">
                <h1 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h1>
                <img src="https://img.naidunia.com/naidunia/ndnimg/26052020/26_05_2020-tour_and_travel.jpg" class="img-fluid img-thumbnail" />
                <h2 class="text-center"> @Html.DisplayFor(modelItem => item.Description)</h2>
                <hr />
                <h3 class="text-lg-center"> @Html.DisplayFor(modelItem => item.Duration)</h3>
                <hr />
                <h1>@Html.DisplayFor(modelItem => item.Payment)</h1>


            </div>

        }

    </div>
</div>

<hr />

<h1 class="text-lg-center"> Happy Clients </h1>
<div class="container">
    <div class="row">

        @foreach (var items in Model.PackageBooking)
        {
            <div class="col-md-4">
                <h1 class="card-title">@Html.DisplayFor(modelItem => items.Name)</h1>
                <img src="https://media.istockphoto.com/photos/happy-mid-adult-insurance-agent-shaking-hands-with-his-customer-in-picture-id1132012708?k=6&m=1132012708&s=612x612&w=0&h=ZBjVkvvia1R8sXOKq0Y9LNngFNU56VGmZuw3YkCfn94=" class="img-fluid img-thumbnail" />
                
                <h1>@Html.DisplayFor(modelItem => items.Payment)</h1>


            </div>

        }

    </div>
</div>
